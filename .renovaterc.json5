{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'docker:enableMajor',
    'helpers:pinGitHubActionDigests',
    'github>heroaero-dev/k8s-clusters//.renovate/autoMerge.json5',
    'github>heroaero-dev/k8s-clusters//.renovate/customManagers.json5',
    'github>heroaero-dev/k8s-clusters//.renovate/groups.json5',
    'github>heroaero-dev/k8s-clusters//.renovate/semanticCommits.json5',
    'github>heroaero-dev/k8s-clusters//.renovate/labels.json5',
    ':automergeBranch',
    ':disableRateLimiting',
    ':dependencyDashboard',
    ':semanticCommits',
    ':timezone(America/Los_Angeles)',
  ],
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  suppressNotifications: [
    'prEditedNotification',
    'prIgnoreNotification',
  ],
  ignorePaths: [
    '**/*.sops.*',
  ],
  enabledManagers: [
    'flux',
    'helm-values',
    'helmv3',
    'kubernetes',
    'custom.regex',
    'github-actions',
  ],
  flux: {
    managerFilePatterns: [
      '\\.yaml(?:\\.j2)?$',
    ],
  },
  'helm-values': {
    managerFilePatterns: [
      '\\.yaml(?:\\.j2)?$',
    ],
  },
  kubernetes: {
    managerFilePatterns: [
      '\\.yaml(?:\\.j2)?$',
    ],
  },
}
